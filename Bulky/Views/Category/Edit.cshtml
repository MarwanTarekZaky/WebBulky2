@model Category
<!DOCTYPE html>

<html lang="en">
<head>
    <title>Category edit</title>
</head>
<body>
<div>
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pt-2">
                <h2 class="text-primary">Edit category</h2>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3 row">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control blue" type="text" placeholder="@Model.Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control blue" type="text" placeholder="@Model.DisplayOrder">
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6 col-sm-3 col-md-4 col-lg-6">
                    <button class="btn btn-primary form-control text-light" type="submit">Update</button>
                </div>
                <div class="col-6  col-sm-3 col-md-4 col-lg-6">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control"
                       style="--bs-danger-text-emphasis: #1f9bcf">back to list</a>
                </div>
            </div>
        </div>
    </form>
</div>
</body>
</html>

@section Scripts{
    
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}