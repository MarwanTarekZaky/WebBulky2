@model Category
<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <form action="post">
        <div class="border p-3 mt-4">
            <div class="row pt-2">
                <h2 class="text-primary">Crate category</h2>
            </div>
            <div class="mb-3 row">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control blue" type="text">
