@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3  col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.IamgeURL" alt="" class="card-img-top rounded">
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-white-50 opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center"><b>By @product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-white text-opacity-75 text-center">: <span class="text-decoration-line-through">$@product.ListPrice.ToString("c")</span></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-white text-opacity-75 text-center">As low as: <span>$@product.Price100.ToString("c")</span></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>