@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Bulky.Models.Company
<!DOCTYPE html>

<html lang="en">
<head>
    <title>Company add</title>
</head>
<body>
<div class="card shadow border-0 my-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center ">
                <h2 class="text-pink py-2">@(Model.Id!=0?"Update":"Create")  Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4 ">
        <form method="post" class="row justify-content-center" enctype="multipart/form-data">
            <input asp-for="Id" hidden >
         
            <div class="row">
                <div class="col-12">
                    <div class="border p-3 ">
                        <div asp-validation-summary="All"></div>
                        <div class="mb-3 row">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control blue" type="text">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" class="form-control blue" type="text">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="StreetAddress"></label>
                            <input asp-for="StreetAddress" class="form-control blue" type="text">
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="City"></label>
                            <input asp-for="City" class="form-control blue" type="text">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="State"></label>
                            <input asp-for="State" class="form-control blue" type="text">
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="PostalCode"></label>
                            <input asp-for="PostalCode" class="form-control blue" type="text">
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-6 col-sm-3 col-md-4 col-lg-6">
                                @if (Model.Id != 0)
                                {
                                    <button class="btn btn-primary form-control text-light" type="submit">Update</button>
                                }
                                else
                                {
                                    <button class="btn btn-primary form-control text-light" type="submit">Create</button>
                                }
                            </div>
                            <div class="col-6  col-sm-3 col-md-4 col-lg-6">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control"
                                   style="--bs-danger-text-emphasis: #1f9bcf">back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
</html>

