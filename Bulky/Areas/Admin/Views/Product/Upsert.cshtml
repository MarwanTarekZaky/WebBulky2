@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Bulky.Models
@using Bulky
@model Bulky.Models.ViewModels.ProductVM
<!DOCTYPE html>

<html lang="en">
<head>
    <title>Product add</title>
</head>
<body>
<div class="card shadow border-0 my-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center ">
                <h2 class="text-pink py-2">@(Model.Product.Id!=0?"Update":"Create")  product</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4 ">
        <form method="post" class="row justify-content-center" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden >
            <input asp-for="Product.IamgeURL" hidden >
            <div class="row">
                <div class="col-10">
                    <div class="border p-3 ">
                        <div asp-validation-summary="All"></div>
                        <div class="mb-3 row">
                            <label asp-for="Product.Title"></label>
                            <input asp-for="Product.Title" class="form-control blue" type="text">
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Product.Description"></label>
                            <textarea asp-for="Product.Description" class="form-control blue" type="text"> </textarea>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Product.ISBN"></label>
                            <input asp-for="Product.ISBN" class="form-control blue" type="text">
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Product.Author"></label>
                            <input asp-for="Product.Author" class="form-control blue" type="text">
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Product.ListPrice"></label>
                            <input asp-for="Product.ListPrice" class="form-control blue" type="text">
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Product.Price"></label>
                            <input asp-for="Product.Price" class="form-control blue" type="text">
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Product.Price50"></label>
                            <input asp-for="Product.Price50" class="form-control blue" type="text">
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Product.Price100"></label>
                            <input asp-for="Product.Price100" class="form-control blue" type="text">
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Product.IamgeURL"></label>
                            <input class="form-control blue" type="file" name="file">
                        </div>
                        <div class="form-floating py-2 col-12">

                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-control blue" type="text">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="Product.CategoryId" class="ms-2"></label>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-6 col-sm-3 col-md-4 col-lg-6">
                                @if (Model.Product.CategoryId != 0)
                                {
                                    <button class="btn btn-primary form-control text-light" type="submit">Update</button>
                                }
                                else
                                {
                                    <button class="btn btn-primary form-control text-light" type="submit">Create</button>
                                }
                            </div>
                            <div class="col-6  col-sm-3 col-md-4 col-lg-6">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control"
                                   style="--bs-danger-text-emphasis: #1f9bcf">back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Product.IamgeURL" width=100%  style="border-radius: 5px; border: 1px solid black"/>
                </div>
            </div>
            
        </form>
    </div>
</div>


</body>
</html>

